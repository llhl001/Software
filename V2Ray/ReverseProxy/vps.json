{
  "inbounds": [
    {
      /** todo 用于接收 home.json 发送过来的数据 */
      "tag": "homeIn",                
      "protocol":"vmess",
      "port":12345,
      "settings":{  
        "clients":[  
          {"id":"a26efdb8-ef34-4278-a4e6-2af32cc010aa", "alterId":4}
        ]
      }
    },
    {
      /** todo 用于接收 company.json 主动发送的请求 */
      "tag": "companyIn",
      "port": 12346,
      "protocol": "vmess",
      "settings": {
        "clients": [
          {"id": "27848739-7e62-4138-9fd3-098a63964b6b", "alterId":4}
        ]
      }
    }
  ],
  "reverse": {
    "portals": [
      {
        /** todo 用于转发 company 和 home 发送的数据 */
        "tag": "portal",
        "domain": "haku.kasei"      // 域名不用真实存在，只用作反向代理的标识，但是必须和 company.json 中配置的一样
      }
    ]
  },
  "routing": {
    "rules": [
      /** todo 配置 companyIn 流入的流量（即反向代理流量）全发送到 portal */
      {
        "type": "field",
        "inboundTag": ["companyIn"],
        "outboundTag": "portal"
      },
      /** todo 配置 homeIn 流入的流量，且带有 domain 的全发送到 portal 跟反向代理流量对接 */
      {
        "type": "field",
        "inboundTag": ["homeIn"],
        "domain":["full:haku.kasei"],
        "outboundTag": "portal"
      }
    ]
  }
    
    
}
