{
  "log": {"loglevel": "debug"},
  "inbounds": [
    {
      "tag": "ladderSocksIn",
      "protocol": "socks",
      "port": 1080,
      "listen": "127.0.0.1",
      "settings": {
        "auth": "noauth"
      }
    }
  ],
   "outbounds": [    
    /** todo 翻墙流量出口 */
    {
      "tag": "h2LadderOut",
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "66.98.122.202",
            "port": 12306,
            "users": [
              { "id":"d45499fa-6c4b-3e55-adbb-bd50bc4137b8", "alterId":4, "security":"chacha20-poly1305", "level":0 }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "http",
        "httpSettings": {
          "host": ["qwer.com", "wasd.com", "ijkl.com", "zxcf.com"],
          "path": "/v2ray/ladder/h2"
        },
        "security": "tls", 
        "tlsSettings": {
          "serverName": "1291114093.ml",
          "certificates": [
            { "usage": "verify", "certificateFile": "F:/V2Ray/v2ray-windows-64/rootca.crt" }  // 自建的 CA 根证书，用于验证
          ]
        }
      }
    },
    /** todo 直连出口 */
    {
      "tag": "freedomOut",
      "protocol": "freedom"
    }
  ], 
  "routing": {
    "domainStrategy": "AsIs",     // 使用系统的 DNS 解析域名
    "rules": [
      /** todo 翻墙流量，从 VPS 出 */
      {
        "type": "field",
        "network": "tcp,udp",
        "inboundTag": ["ladderSocksIn"],
        "outboundTag": "h2LadderOut"
      },
      /** todo 国内流量直连 */
      {
        "type": "field",
        "domain": [
          "geosite:tld-cn",
          "geosite:geolocation-cn",
          "geosite:cn"
        ],
        "ip": [
          "geoip:private",
          "geoip:cn"
        ],
        "network": "tcp,udp",
        "outboundTag": "freedomOut"
      }
    ]
  }

}



